<h1>All Posts</h1><button> <%= link_to "Make a Post!", new_post_path %></button>
<% @posts.each do |post| %>

    <div class="media">
        <div class="media-body">
            <h4 class="media-heading">
                <% if post.id % 5 == 0 %>
                <%=  post.title = "SPAM!" %>
                <br>
                <% else  %>
                <%= link_to post.title, post %>
            </h4>
        </div>
    </div>
    <% end %>
    <% end %>
